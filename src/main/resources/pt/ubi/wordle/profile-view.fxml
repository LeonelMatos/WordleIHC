<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: #DDDDDD;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ubi.wordle.ProfileController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <BorderPane>
         <left>
            <Button fx:id="btnExit" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleExitButton" style="-fx-background-color: ff6962;" text="Voltar" textAlignment="CENTER" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Georgia Bold" size="18.0" />
               </font>
            </Button>
         </left>
         <center>
            <Label contentDisplay="CENTER" text="Perfil" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Georgia Bold" size="36.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
      <VBox fx:id="profileHolder" alignment="CENTER" spacing="20.0" style="-fx-background-color: #EEEEEE;" VBox.vgrow="SOMETIMES" />
       <Button fx:id="newProfileButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#instantiateProfileBox" style="-fx-background-color: #ACB0F2;" text="Novo" textAlignment="CENTER" textFill="WHITE" VBox.vgrow="SOMETIMES">
           <font>
               <Font name="Georgia Bold" size="18.0" />
           </font>
       </Button>
   </children>
</VBox>

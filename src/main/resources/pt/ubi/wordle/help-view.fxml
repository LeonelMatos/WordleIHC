              <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExitButton" style="-fx-background-color: ff6962;" text="Voltar" textFill="WHITE" BorderPane.alignment="CENTER">
                  <font>
                      <Font name="Georgia Bold" size="18.0" />
                  </font>
              </Button>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: #DDDDDD;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ubi.wordle.GameController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <BorderPane>
         <left>
            <Button fx:id="bntExit" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleExitButton" style="-fx-background-color: ff6962;" text="Voltar" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Georgia Bold" size="18.0" />
               </font>
            </Button>
         </left>
         <right>
            <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="currentLanguage" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@flags/portugal.png" />
                     </image>
                  </ImageView>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" style="-fx-background-color: #ACB0F2;" text="Perfil" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Georgia Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </right>
         <center>
            <Label text="Perfil nome" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Georgia Bold" size="24.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
      <VBox fx:id="gameBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: #CCCCCC;" VBox.vgrow="SOMETIMES" />
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#submitWord" style="-fx-background-color: #ACB0F2;" text="Submeter" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Georgia Bold" size="18.0" />
         </font>
      </Button>
   </children>
</VBox>
